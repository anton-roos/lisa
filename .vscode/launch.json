{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Lisa (Local)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build Lisa",
      "program": "dotnet",
      "args": [
        "${workspaceFolder}/src/bin/Debug/net10.0/Lisa.dll"
      ],
      "cwd": "${workspaceFolder}/src",
      "stopAtEntry": false,
      "serverReadyAction": {
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    }
  ]
}
