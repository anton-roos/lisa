@using Lisa.Models.Entities
@inject IJSRuntime JsRuntime

<button class="btn btn-outline-danger" @onclick="DownloadPdf">
    <i class="bi bi-file-earmark-pdf"></i> Download PDF
</button>
<table id="learner-list" class="table">
    <thead>
        @if (!string.IsNullOrWhiteSpace(Title))
        {
            <h3>@Title</h3>
        }
        else
        {
            <h3>Learner List</h3>
        }
        <tr>
            <th>Full Name</th>
            <th>Register Class</th>
        </tr>
    </thead>
    <tbody>
        @if (!Learners.Any())
        {
            <tr>
                <td colspan="2">No learners available.</td>
            </tr>
        }
        else
        {
            @foreach (var learner in Learners)
            {
                <tr>
                    <td>@learner.DisplayName</td>
                    <td>@learner.RegisterClass?.DisplayName</td>
                </tr>
            }
        }
    </tbody>
</table>

@code {
    [Parameter]
    public List<Learner> Learners { get; set; } = [];
    [Parameter]
    public string? Title { get; set; }

    private async Task DownloadPdf()
    {
        await JsRuntime.InvokeVoidAsync("downloadLearnerListPDF");
    }
}
