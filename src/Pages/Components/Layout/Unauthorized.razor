@inject NavigationManager NavigationManager

<PageTitle>Unauthorized Access</PageTitle>

<div class="d-flex flex-column align-items-center justify-content-center text-center">
    <div class="card shadow-lg" style="max-width: 500px; border-radius: 15px;">
        <div class="card-body">
            <h1 class="text-danger display-4"><i class="bi bi-shield-lock-fill"></i></h1>
            <h3 class="mt-3">Unauthorized Access</h3>
            <p class="text-muted mt-2">
                You don't have permission to view this page. Please contact your administrator if you believe this is an error.
            </p>
            <button class="btn btn-primary mt-3" @onclick="GoHome">
                <i class="bi bi-house-door-fill me-2"></i>Go to Homepage
            </button>
            <button class="btn btn-primary mt-3" @onclick="Login">
                <i class="bi bi-box-arrow-in-right me-2"></i>Login
            </button>
        </div>
    </div>
</div>

@code {
    private void GoHome()
    {
        NavigationManager.NavigateTo("/" , forceLoad: true);
    }

    private void Login()
    {
        NavigationManager.NavigateTo("/login");
    }
}
