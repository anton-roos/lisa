@using Lisa.Models.Entities

@code
{
    [Parameter] public IEnumerable<Learner> Learners { get; set; } = [];
    [Parameter] public EventCallback<Guid> OnSelect { get; set; }
}

@if (!Learners.Any())
{
  <div class="alert alert-secondary">No learners found</div>
}
else
{
  <div class="d-flex flex-column">
    @foreach (var l in Learners)
    {
      <div class="card mb-2" @onclick="() => OnSelect.InvokeAsync(l.Id)">
        <div class="card-body">@l.Name @l.Surname</div>
      </div>
    }
  </div>
}